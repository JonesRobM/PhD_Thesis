@Article{C6SC04788B,
author ="Calle-Vallejo, Federico and Pohl, Marcus D. and Reinisch, David and Loffreda, David and Sautet, Philippe and Bandarenka, Aliaksandr S.",
title  ="Why conclusions from platinum model surfaces do not necessarily lead to enhanced nanoparticle catalysts for the oxygen reduction reaction",
